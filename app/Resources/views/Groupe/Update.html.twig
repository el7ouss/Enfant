{% trans_default_domain 'FOSUserBundle' %}
{% extends "Layout.html.twig" %}

{% block title %}
    <title>Modifier un Groupe</title>
{% endblock title %}

{% block PLUGIN %}

{% endblock %}
{% block content %}
    <div class="col s6 m12 l12">
        <div class="card-panel">
            <h5>Modifier un groupe</h5>
            <div class="row ">
                {{form_start(form) }}
                {{ form_errors(form) }}
                <div class="col m6">
                    <div class="row ">
                        <div class="input-field col s6">
                            <i class="card-content red-text" >{{ form_errors(form.libelle) }}</i>
                            {{ form_widget(form.libelle, {'attr': {'class': 'form-control'}} ) }}
                            <label for="libelle" class="center-align">libelle </label>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="input-field col s6">
                            <i class="card-content red-text" >{{ form_errors(form.nbMax) }}</i>
                            {{ form_widget(form.nbMax, {'attr': {'class': 'form-control'}} ) }}
                            <label for="nbMax" class="center-align">Nombre maximum</label>
                        </div>
                    </div>
                </div>
                <div class="row ">
                    <div class="input-field col s12">

                        <input type="submit" value="Mettre a jour" class="btn waves-effect waves-light col s6"
                               a href="{{ path('Groupe_list') }}"/>
                    </div>
                </div>
            </div>
        </div>

        {{ form_end(form) }}
    </div>

{% endblock %}