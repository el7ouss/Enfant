{% trans_default_domain 'FOSUserBundle' %}
{% extends "Layout.html.twig" %}
{% block title %}
    <title>Liste d'activité de {{ groupe.libelle }}</title>
{% endblock title %}
{% block PLUGIN %}
    <link href="{{ asset('Admin/js/plugins/prism/prism.css') }}" type="text/css" rel="stylesheet"
          media="screen,projection">
    <link href="{{ asset('Admin/js/plugins/perfect-scrollbar/perfect-scrollbar.css') }}" type="text/css"
          rel="stylesheet" media="screen,projection">
    <link href="{{ asset('Admin/js/plugins/data-tables/css/jquery.dataTables.min.css') }}" type="text/css"
          rel="stylesheet" media="screen,projection">

{% endblock %}
{% block content %}
    <div id="table-datatables">
        <h5> Liste d'activité de <b>{{ groupe.libelle }} </b></h5>
        <div class="row">
            <div class="col s12 m10 l12">
                <table id="data-table-simple" class="responsive-table display" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Groupe</th>
                        <th>Libelle</th>
                        <th>Nombre d'heure</th>
                        <th>Seance</th>
                        <th>Option</th>
                    </tr>
                    </thead>

                    <tfoot>
                    <tr>
                        <th>Groupe</th>
                        <th>Libelle</th>
                        <th>Nombr d'heure</th>
                        <th>Seance</th>
                        <th>Option</th>
                    </tr>
                    </tfoot>

                    <tbody>
                    {% for activite in activite %}
                        <tr>
                            <td>{{ activite.groupe.libelle }}</td>
                            <td>{{ activite.libelle }}</td>
                            <td>{{ activite.nbHeure}}</td>
                            <td>
                                <a href="{{ path('SeanceActivite_list', { 'id': activite.id }) }}" class="waves-effect waves-light btn-flat "><i class="mdi-editor-attach-money"></i></a>
                            </td>

                            <td>
                                <a href="{{ path('Activite_Update', { 'id': activite.id}) }}" class="waves-effect waves-light btn-flat ">
                                    <i class="mdi-editor-border-color right"></i></a>
                                <a href="{{ path('Activite_Delete', { 'id': activite.id }) }}" class="waves-effect waves-light btn-flat ">
                                    <i class="mdi-action-delete left"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Floating Action Button -->
    <div class="fixed-action-btn" style="bottom: 50px; right: 19px;">
        <a href="{{ path('Activite_Add',{'id': groupe.id }) }}" class="btn-floating blue btn-large">
            <i class="mdi-content-add"></i>
        </a>
    </div>
    <!-- Floating Action Button -->
{% endblock %}