{% trans_default_domain 'FOSUserBundle' %}
{% extends "Layout.html.twig" %}

{% block title %}
    <title>Modifier une Adhesion</title>
{% endblock title %}

{% block PLUGIN %}

{% endblock %}
{% block content %}
    <div class="col s6 m12 l12">
        <div class="card-panel">
            <h5>Modifier une adhésion</h5>
            <div class="row ">
                {{form_start(form) }}
                {{ form_errors(form) }}
                <div class="col m6">
                    <div class="row ">
                        <div class="input-field col s6">
                            <p></p>
                            <i class="card-content red-text" >{{ form_errors(form.type) }}</i>
                            {{ form_widget(form.type, {'attr': {'class': 'form-control'}} ) }}
                            <label for="type" class="center-align">Type d'adhesion </label>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="input-field col s6">
                            <p></p>
                            <i class="card-content red-text" >{{ form_errors(form.typePaiement) }}</i>
                            {{ form_widget(form.typePaiement, {'attr': {'class': 'form-control'}} ) }}
                            <label for="typePaiement" class="center-align">Type de paiement </label>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="input-field col s6">
                            <p></p>
                            <i class="card-content red-text" >{{ form_errors(form.montant) }}</i>
                            {{ form_widget(form.montant, {'attr': {'class': 'form-control'}} ) }}
                            <label for="montant" class="center-align">Montant </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <label for="enable">Adhésion enable or disable</label>
                        </div>
                        <div class="input-field col s12">
                            {{ form_widget(form.enable, {'attr': {'class': 'form-control'}} ) }}
                            <i class="card-content red-text" >{{ form_errors(form.enable) }}</i>
                        </div>
                    </div>
                </div>
                <div class="row ">
                    <div class="input-field col s12">
                        {{ form_widget(form.update) }}
                    </div>
                </div>
            </div>
        </div>

        {{ form_end(form) }}
    </div>

{% endblock %}