{% extends "Layout.html.twig" %}
{% block title %}
    <title>Liste des éléves</title>
{% endblock title %}
{% block PLUGIN %}
    <link href="{{ asset('Admin/js/plugins/prism/prism.css') }}" type="text/css" rel="stylesheet"
          media="screen,projection">
    <link href="{{ asset('Admin/js/plugins/perfect-scrollbar/perfect-scrollbar.css') }}" type="text/css"
          rel="stylesheet" media="screen,projection">
    <link href="{{ asset('Admin/js/plugins/data-tables/css/jquery.dataTables.min.css') }}" type="text/css"
          rel="stylesheet" media="screen,projection">

{% endblock %}
{% block content %}
    <div id="table-datatables">
        <h5>Liste des éléves</h5>
        <div class="row">
            <div class="col s12 m10 l12">
                <table id="data-table-simple" class="responsive-table display" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Photo</th>
                        <th>Nom et prénom</th>
                        <th>Date de naissance</th>
                        <th>Nom et prénom du pére</th>
                        <th>Numéro de téléphone du pére</th>
                        <th>Nom et prénom du mére</th>
                        <th>Numéro de téléphone du mére</th>
                        <th>Adhésion</th>
                        <th>Groupe</th>
                        <th>Option</th>
                    </tr>
                    </thead>

                    <tfoot>
                    <tr>
                        <th>Photo</th>
                        <th>Nom et prénom</th>
                        <th>Date de naissance</th>
                        <th>Nom et prénom du pére</th>
                        <th>Numéro de téléphone du pére</th>
                        <th>Nom et prénom du mére</th>
                        <th>Numéro de téléphone du mére</th>
                        <th>Adhésion</th>
                        <th>Groupe</th>
                        <th>Option</th>
                    </tr>
                    </tfoot>

                    <tbody>
                    {% for eleve in eleve %}
                        <tr>
                            <td><img height="50" width="50" src="{{ asset('uploads/Eleve/'~eleve.image) }}"/></td>
                            <td>{{ eleve.nom }} {{ eleve.prenom }}</td>
                            <td>{{ eleve.dateNaiss }}</td>
                            <td>{{ eleve.prenomPere }} {{ eleve.nomPere }}</td>
                            <td>{{ eleve.numTelPere }}</td>
                            <td>{{ eleve.prenomMere }} {{ eleve.nomMere }}</td>
                            <td>{{ eleve.numTelMere }}</td>
                            <td>
                                <a href="{{ path('AdhesionEleve_list', { 'id': eleve.id }) }}" class="waves-effect waves-light btn-flat "><i class="mdi-editor-attach-money"></i></a>
                            </td>
                            <td>
                                {{ eleve.groupe.libelle }}
                            </td>
                            <td>
                                <a href="{{ path('Eleve_Update', { 'id': eleve.id}) }}" class="waves-effect waves-light btn-flat ">
                                    <i class="mdi-editor-border-color right"></i></a>
                                <a href="{{ path('Eleve_Delete', { 'id': eleve.id }) }}" class="waves-effect waves-light btn-flat ">
                                    <i class="mdi-action-delete left"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Floating Action Button -->
    <div class="fixed-action-btn" style="bottom: 50px; right: 19px;">
        <a href="{{ path("Eleve_Add") }}" class="btn-floating blue btn-large">
            <i class="mdi-content-add"></i>
        </a>
    </div>
    <!-- Floating Action Button -->
{% endblock %}